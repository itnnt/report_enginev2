					<include> **/*</include>
				</includes>
			</resource> -->
			<!-- 
			<resource>
				<directory>./src/main/resources</directory>
				<targetPath>${project.build.directory}</targetPath>
				<includes>
					<include> **/*</include>
				</includes>
			</resource>
			 -->
			
			<!-- loi khi build bang eclipse:eclipse - khong dung bien project.build.directory -->
			<resource>
				<directory>./bin</directory>
				<targetPath>${project.build.directory}/bin</targetPath>
				<includes>
					<include> **/*.bat</include>
					<include> **/*.sh</include>
					<include> **/*.xml</include>
					<include> **/*.xls*</include>
					<include> **/*.properties</include>
				</includes>
			</resource>
		</resources>
	</build>
</project>
